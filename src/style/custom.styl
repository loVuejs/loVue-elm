// 自定义公共样式

$blank = #333;
$blue = #26a2ff;
$666 = #666
$999 = #999
$gray = #ccc
$red = #F85367
$ddd = #ddd
$bgColor = #F5F5F5

html, body
    height: 100%;
    background: #f5f5f5;

#app
    font-family: 'Avenir', Helvetica, Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-size: 16px;
    color: $blank;
    text-align: center;
    min-height: 100%;

.padding-0
    padding: 0!important;

.page-box
    padding-top: 40px;

.bg-fff
    background: #fff;

.text-left 
    text-align: left;

.border-0 
    border: 0;

.section
    margin-bottom: 10px;
    background: #fff;

.cell-box
    padding: 0 10px;
    display: flex;
    align-items: center;
    height: 46px;

.border-top
    border-top: 1px solid $ddd;

.border-bottom
    border-bottom: 1px solid $ddd;

.border-top-bottom
    border-top: 1px solid $ddd;
    border-bottom: 1px solid $ddd;

.cell-item-left
    flex: auto;
    color: $blank;

.cell-item-text
    font-size: 16px;
    text-align: left;

.cell-item-right
    flex: none;

.cell-item-sub-text
    color: $999;
    font-size: 14px;

.form-input
    box-sizing: border-box;
    padding: 0 15px; 
    width: 100%;
    height: 46px;
    border: 0;
    outline: none;

.form-btn-box
    padding: 0 15px;
    margin: 0 0 10px 0;

.form-btn
    width: 100%;
    height: 46px;
    border: 0;
    font-size: 16px;
    color: #fff;
    background: $blue;
    border-radius: 5px;
    outline: none;

.inline-btn
    width: 80px;
    height: 46px;
    border: 0;
    color: #fff;
    font-size: 16px;
    background: $blue;
    outline: none;

// 覆盖 mint-ui 样式
.mint-cell:last-child,
.mint-cell-wrapper
    background-image: none;

.food-type-list .mint-swipe-indicator.is-active
    background: $blue;
    opacity: 1;