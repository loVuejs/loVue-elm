// 自定义公共样式

$blank = #333;
$blue = #26a2ff;
$666 = #666
$999 = #999
$gray = #ccc
$red = #F85367
$ddd = #ddd
$eee = #eee
$bgColor = #F5F5F5

html, body
    height: 100%;
    background: #f5f5f5;

#app
    font-family: 'Avenir', Helvetica, Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-size: 16px;
    color: $blank;
    text-align: center;
    min-height: 100%;

.padding-0
    padding: 0!important;

.full
    width: 100%;
    height: 100%;

.flex
    display: flex;
    align-items: center;

.clearfix:before,
.clearfix:after
    display: table;
    content: " ";

.clearfix:after 
    clear: both;
.clearfix
    *zoom: 1;

.fl
    float: left;

.fr
    float: right;

.ellipsis
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

.page-box
    padding-top: 40px;

.bg-fff
    background: #fff;

.text-left 
    text-align: left;

.border-0 
    border: 0;

.section
    margin-bottom: 10px;
    background: #fff;

.cell-box
    padding: 0 10px;
    display: flex;
    align-items: center;
    height: 46px;

.border-top
    border-top: 1px solid $ddd;

.border-bottom
    border-bottom: 1px solid $ddd;

.border-top-bottom
    border-top: 1px solid $ddd;
    border-bottom: 1px solid $ddd;

.cell-item-left
    flex: auto;
    color: $blank;

.cell-item-text
    font-size: 16px;
    text-align: left;

.cell-item-right
    flex: none;

.cell-item-sub-text
    color: $999;
    font-size: 14px;

.form-input
    box-sizing: border-box;
    padding: 0 15px; 
    width: 100%;
    height: 46px;
    border: 0;
    outline: none;

.form-btn-box
    padding: 0 15px;
    margin: 0 0 10px 0;

.form-btn
    width: 100%;
    height: 46px;
    border: 0;
    font-size: 16px;
    color: #fff;
    background: $blue;
    border-radius: 5px;
    outline: none;

.inline-btn
    width: 80px;
    height: 46px;
    border: 0;
    color: #fff;
    font-size: 16px;
    background: $blue;
    outline: none;

.list-wrapper
    margin-bottom: 10px;
    background: #fff;

.list-head
    padding: 0 10px;
    height: 40px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid $eee;
    .item
        flex: auto;
        font-szie: 16px;
        color: $999;
        text-align: left;
        .iconfont
            margin-right: 3px;
.list-body
    .item
        display: block;
        padding: 10px;
        text-decoration: none;
        border-bottom: 1px solid $eee;
    .item-bg
        background: url('data:image/svg+xml;base64,') no-repeat;
        background-size: 100%;
    .img-box
        width: 64px;
        height: 64px;
        margin-right: 10px;
        img 
            width: 100%;
            height: 100%;
    .info-box
        margin-left: 74px;
        .info-first-item
            padding: 0 52px 0 37px;
            position: relative;
            .head-icon
                position: absolute;
                left: 0;
                top: 0;
                padding: 2px 4px;
                font-size: 12px;
                color: $blank;
                text-align: center;
                background: #ffd930;
                border-radius: 2px;
            .head-title
                margin: 0;
                font-size: 16px;
                color: $blank;
                text-align: left;
            .head-right
                position: absolute;
                right: 0;
                top: 0;
                display: flex;
                margin: 0;
                padding: 0;
                list-style: none;
                width: 42px;
                color: $999;
                font-size: 14px;
                li
                    flex: 1;
        .info-second-item
            margin-top: 8px;
            margin-bottom: 5px;
            height: 20px;
            font-size: 12px;
            .sales-volume
                margin-left: 3px;
                color: $blank;
            .hummingbird
                display: inline-block;
                padding: 2px 4px;
                color: #fff;
                background: $blue;
                border-radius: 2px;
            .on-time
                display: inline-block;
                margin-left: 5px;
                padding: 1px 3px;
                color: $blue;
                border: 1px solid;
                background: #fff;
                border-radius: 2px;
        .info-three-item
            font-size: 13px;
            color: $blank;
            .segmentation
                color: $gray;
            .blue
                color: $blue;
// 覆盖 mint-ui 样式
.mint-cell:last-child,
.mint-cell-wrapper
    background-image: none;

.food-type-list .mint-swipe-indicator.is-active
    background: $blue;
    opacity: 1;